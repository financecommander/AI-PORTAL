# Backend v2.0 Environment Configuration

# Database
# For development/testing, use SQLite:
# DATABASE_URL=sqlite:///./test.db
# For production, use PostgreSQL:
DATABASE_URL=postgresql://user:password@localhost:5432/ai_portal

# JWT Authentication
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
XAI_API_KEY=your_xai_api_key_here

# Authentication
ALLOWED_DOMAINS=financecommander.com

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Application
DEBUG=false
APP_NAME=FinanceCommander AI Portal v2.0
